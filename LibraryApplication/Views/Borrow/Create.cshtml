@model LibraryApplication.ViewModels.BorrowViewModel

<!-- Bootstrap CSS Bağlantısı -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<h2>Ödünç Kitap Ver</h2>

<!-- Form başlangıcı -->
<form asp-action="Create" asp-controller="Borrow" method="post">
    <!-- Kitap ID için gizli alan -->
    <input type="hidden" asp-for="BookId" />

    <!-- Kullanıcının bilgileri için giriş alanları -->
    <div class="form-group">
        <label asp-for="Name">İsim</label>
        <input asp-for="Name" class="form-control" type="text" required />
    </div>

    <div class="form-group">
        <label asp-for="Surname">Soyisim</label>
        <input asp-for="Surname" type="text" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email"type="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Telefon Numarası</label>
        <input asp-for="PhoneNumber" type="tel" class="form-control" />
    </div>

    <!-- Teslim tarihi için tarih seçici -->
    <div class="form-group">
        <label asp-for="ReturnDate">Teslim Tarihi</label>
        <input type="date" asp-for="ReturnDate"  placeholder="dd-mm-yyyy"  min="1997-01-01" max="2030-12-31" required>
    </div>

    <!-- Gönder düğmesi -->
    <button type="submit" class="btn btn-primary">Ödünç Ver</button>
</form>

<!-- Bootstrap JS Bağlantısı -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
